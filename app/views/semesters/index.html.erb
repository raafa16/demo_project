<div class="container">


  <div>
    <div class="jumbotron">
      <h1 class="text-center">Semester</h1>
    </div>
  </div>

  <div class="container">

        <table class="table table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Active</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>

          <% @semesters.each do |semester| %>
              <tr>
                <td><%= semester.name %></td>
                <td><%= semester.year %></td>
                <td><%= semester.active %></td>
                <td><%= link_to 'Show', semester %></td>
                <td><%= link_to 'Edit', edit_semester_path(semester) %></td>
                <td><%= link_to 'Destroy', semester, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>


          </tbody>
        </table>
  </div>

  <br>

      <div class="col-md-12 text-center">
        <%= link_to 'New Semester', new_semester_path,  class: 'btn btn-default '%>
      </div>



</div>

