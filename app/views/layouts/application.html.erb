<!DOCTYPE html>
<html>
  <head>
    <title>DemoProject</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class=" navbar-brand" href='/courses'>Courses</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <% if user_signed_in? %>
        <ul class="nav navbar-nav">
          <%# if current_page?(controller: 'users', action: 'show') %>
          <% if current_page?('/users/show') %>
              <li class="active"><%= link_to 'My profile', users_show_path, :class => 'navbar-link' %></li>
          <%else%>
              <li><%= link_to 'My profile', users_show_path, :class => 'navbar-link' %></li>
          <%end%>
          <% if current_page?('/edit') %>
                <li class="active"><%= link_to 'Edit Profile', edit_user_registration_url, :class => 'navbar-link' %> </li>
          <%else%>
                <li><%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
          <%end%>
          <% if current_page?('/courses/confirmed_registration') %>
              <li class="active"><%= link_to 'Registered Courses', confirmed_registration_courses_path, :class => 'navbar-link' %></li>
          <%else%>
              <li><%= link_to 'Registered Courses', confirmed_registration_courses_path, :class => 'navbar-link' %></li>
          <%end%>

          <% if current_page?( '/courses') %>
              <li class="active"><%= link_to 'Course Registration', courses_path, :class => 'navbar-link' %></li>
          <%else%>
              <li><%= link_to 'Course Registration', courses_path, :class => 'navbar-link' %></li>
          <%end%>
        <% if current_user.admin %>
            <% if current_page?( '/semesters') %>
                <li class="active"><%= link_to 'Semester', semesters_url, :class => 'navbar-link' %></li>
            <%else%>
                <li><%= link_to 'Semester', semesters_url, :class => 'navbar-link' %></li>
            <%end%>
            <% if current_page?( '/courses/publish_grade') %>
              <li class="active"><%= link_to 'Publish Grade',  publish_grade_courses_url, :class => 'navbar-link' %></li>
            <%else%>
              <li><%= link_to 'Publish Grade',  publish_grade_courses_url, :class => 'navbar-link' %></li>
            <%end%>
          <%end%>
        </ul>
        <ul class="nav navbar-nav navbar-right">

          <li>
            <%= link_to destroy_user_session_path, method: :delete, :class => 'navbar-link' do %>
                Hi <strong><%= current_user.first_name %></strong>! <i class="glyphicon glyphicon-log-out">Logout</i>
            <%end%>
          </li>
        </ul>
        <%else%>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to new_user_registration_path, :class => 'navbar-link'  do %>
                <i class="glyphicon glyphicon-user"> Signup</i>
            <%end%>
          </li>
          <li><%= link_to new_user_session_path, :class => 'navbar-link'  do %>
               <i class="glyphicon glyphicon-log-in"> Login</i>
            <%end%>
          </li>
        </ul>
        <%end%>
      </div>
    </div>
  </nav>

    <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
    <% end %>


    <%= yield %>
    </div>
  </body>

  <hr>
  <footer>

          <h4 class="text-center">Â© 2016 Nascenia IT.</h4>
  </footer>
</html>
