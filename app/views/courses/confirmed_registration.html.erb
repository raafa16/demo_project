<div class="container">


  <div>
    <div class="jumbotron">
      <h1 class="text-center">Courses</h1>
    </div>
  </div>

  <% if @courses.present? %>
  <div class="container">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Credit</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>

      <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <td><%= course.credit %></td>
            <td><%= link_to 'Drop',  drop_courses_path(course_id: course.id), class:'btn btn-default' %></td>
          </tr>
      <% end %>

      <div class="col-md-12 text-center">
        <h3>You have registered these courses successfully!</h3>
        <div>
          <% if @current_semester.blank? == true %>
              <h2>No semester marked as active.</h2>
          <%else %>
              <h2>Current Semester: <%=@current_semester.name %> <%= @current_semester.year  %></h2>
          <% end %>
        </div>
      </div>
      <% if @check_user == true %>
          <div class="col-md-12 text-center">
            <%= link_to 'Create New Course', new_course_path, class: 'btn btn-default pull-right' %>
          </div>
      <% else %>
          <div class="col-md-12 text-center">
            <%= link_to'Add Course', courses_path, class: 'btn btn-default pull-right'%>
          </div>
      <% end %>
      </tbody>
    </table>
  </div>

  <%else%>
    <h2 class="text-center">No courses registered.</h2>
  <%end%>
  <br>
  </div>
</div>