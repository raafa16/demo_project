<div class="container">


  <div>
    <div class="jumbotron">
      <h1 class="text-center">Courses</h1>
    </div>
  </div>

  <div class="container">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Credit</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>

      <% current_user.courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.description %></td>
            <td><%= course.credit %></td>

            <td><%#= link_to 'Show', course %></td>
            <td><%#= link_to 'Edit', edit_course_path(course) %></td>
            <td><%#= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Drop',  drop_courses_path(course_id: course.id), class:'btn btn-default' %></td>
          </tr>
      <% end %>

      <div class="col-md-12 text-center">
        <%#= submit_tag "Register Courses" , class:'btn btn-default'%>
        <%= button_tag "You have added these course(s)." , class:'btn btn-success'%>
      </div>
      </tbody>
    </table>
  </div>
  <br>
  <% if @check_user == true %>
      <div class="col-md-12 text-center">
        <%= link_to 'Create New Course', new_course_path, class: 'btn btn-default ' %>
  <% else %>
      <div class="col-md-12 text-center">
        <%#= link_to'Register Courses', class: 'btn btn-default '%>
      </div>
  <% end %>
  </div>
  <div class="col-md-12 text-center">
    <%= link_to'Take more courses', courses_path, class: 'btn btn-default '%>
  </div>
</div>