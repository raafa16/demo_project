<div class="container">


<div>
  <div class="jumbotron">
    <h1 class="text-center">Courses</h1>
  </div>
</div>

<div class="container">
  <%= form_tag({:action => 'register'}) do %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Credit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.credit %></td>
        <% if @check_user == true %>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>

                <td><%#= check_box_tag 'courses[course_id][]', course.id %></td>
            <td><%= check_box_tag 'course_ids[]', course.id %></td>



        <% end  %>
      </tr>
    <% end %>
      <div class="col-md-12 text-center">
        <%= submit_tag "Register Courses" , class:'btn btn-default pull-right'%>
        <%= link_to "Registered Courses", confirmed_registration_courses_path, class:'btn btn-default'%>
      </div>


  </tbody>
</table>
  <% end %>
</div>

<br>
  <% if @check_user == true %>
      <div class="col-md-12 text-center">
        <%= link_to 'Create New Course', new_course_path, class: 'btn btn-default ' %>
  <% else %>
      <div class="col-md-12 text-center">
        <%#= link_to'Register Courses', class: 'btn btn-default '%>
      </div>
  <% end %>
     </div>

</div>